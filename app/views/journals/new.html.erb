<% if flash[:notice] -%>
    <div id="notice"><%= flash[:notice] %></div>
<% end -%>

<%= form_for(@journal, :url => { :action => "new" }) do |f| %>
  <% if @journal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@journal.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @journal.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :work %><br />
    <%= select("journal", "work", ["Self-development", "Working time", "Extra time", "Team work"], {:include_blank => false}) %>
  </p>
  <p>
    <%= f.label :project_id %><br />
    <%= select("journal", "project_id", Project.all.collect {|p| [ p.title, p.id ] }, {:include_blank => false}) %>
  </p>
  <p>
    <%= f.label :activity %><br />
    <%= f.text_area :activity %>
  </p>
   <p>
    <%= f.label :hours %><br />
    <%= f.text_field :hours %>
  </p>
   <p>
    <%= f.label :minutes %><br />
    <%= f.text_field :minutes %>
  </p>
  
  
  <p>
    <%= f.submit "Submit" %>
  </p>
<% end %>